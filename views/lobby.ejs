<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/logo.png">
    <title>Lobby</title>
    <link rel="stylesheet" href="/css/lobby.css">
</head>
<body>
    <header>
        <h1>The Phishing Joust</h1>
    </header>
    <div class="container">
        <div class="left-container">
            <h2>Scan to Join</h2>
            <div class="qr-container">
                <img src="../images/qrcode.png" alt="qrcode" class="qrcode">
            </div>
            <div class="url"><p>url: https://192.168.1.143:5000</p></div>

            <div class="start-button" id="start-game">
                Start Game
            </div>

            <div>&nbsp</div>

            <div class="start-button" id="pause-music">
                Pause Music
            </div>

            <div>&nbsp</div>

            <div class="start-button" id="restart-music">
                Restart Music
            </div>

            <div id="music-bpm">Music Speed: 100%</div>

            <div class="music-button" id="increase-music">
                Speed-up
            </div>

            <div class="music-button" id="decrease-music">
                Slow-down
            </div>

        </div>
        <div class="right-container">
            <ul class="player-ul">
                <li class="header-li">
                    <div class="player">Player</div>
                    <div class="status">Status</div>
                </li>
            </ul>
        </div>
    </div>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/lobby.js"></script>

<!-- MUSIC SCRIPTS -->
<script src="/lib/Tone.min.js"></script>
<script src="/js/music.js"></script>
<!-- END MUSIC SCRIPTS -->

</html>

