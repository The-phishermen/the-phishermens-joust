<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/spectatorSS.css" rel="stylesheet" type="text/css">
    <title>Spectator</title>
</head>

<body>
    <div id="spectator_container">
        <section id='pad_container'>
            <header>
                <span>Rank</span>
                <span>Player</span>
                <span>Health</span>
            </header>
            <section>
                <ol id="list">
                    <% players.sort((a,b)=>a.rank-b.rank) %>
                        <% players.forEach(obj=>{ %>
                            <% if(obj.rank==0){ %>
                                <li class="in"><span>
                                        <%= "Playing" %>
                                    </span> <span>
                                        <%= obj.username %>
                                    </span>
                                    <div class="meta" style="display: none;"><%= obj.rgb %> <%= obj.username %></div>
                                    <div class="health" style="width: 100%; height:100%; margin: auto;"></div>
                                </li>
                                <% }else { %>
                                    <li class="out"><span>
                                            <%= obj.rank %>
                                        </span><span>
                                            <%= obj.username %>
                                        </span></li>
                                    <% } %>
                                        <% }) %>
                </ol>
            </section>
        </section>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        let socket = io();
        let list = document.getElementById('list');
        socket.on('add-player', () => {
            location.reload();
        })
        socket.on('remove-player', () => {
            location.reload();
        })
        let health_divs = document.getElementsByClassName('health');
        let health_meta = document.getElementsByClassName('meta');
        for(let i = 0; i< health_divs.length; i++){
            health_divs[i].id = health_meta[i].innerText.substring(health_meta[i].innerText.indexOf(')')+2);
            health_divs[i].style.backgroundColor = `${health_meta[i].innerText.substring(0,health_meta[i].innerText.indexOf(')')+1)}`
        }

        socket.on('motion-update',(player)=>{
            if(player!=null){
                let health_update = document.getElementById(player.username);
                // let dif = Math.floor((player.rgb.substring(player.rgb.indexOf('(')+1,player.rgb.indexOf(','))));
                // dif = (dif-0)/(100-0)*100
                health_update.style.backgroundColor = player.rgb
                // health_update.style.width = `${100-dif}%`
            }
        })
    </script>
    <script src="/js/fullscreen.js"></script>
</body>

</html>